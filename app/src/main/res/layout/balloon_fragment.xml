<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <sit.kmutt.com.sallywork.customview.BalloonButton
        android:layout_width="@dimen/default_balloon_size"
        android:layout_height="@dimen/default_balloon_size"
        android:id="@+id/btn_balloon"
        android:background="@drawable/circle_default"/>
    <LinearLayout
        android:layout_width="@dimen/default_host_info"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/hostInfo"
        android:layout_toRightOf="@id/btn_balloon"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:background="@android:color/white"
        android:visibility="invisible">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Name"
            android:id="@+id/tv_name"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="status"
            android:id="@+id/tv_status"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="message"
            android:id="@+id/tv_message"
            android:visibility="invisible"/>
    </LinearLayout>

</RelativeLayout>